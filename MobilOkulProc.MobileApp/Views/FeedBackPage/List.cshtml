@using MobilOkulProc.Entities.Concrete
@using MobilOkulProc.MobileApp.Models
@model FeedbackPageModel<FEEDBACK>

@{
    ViewData["Title"] = "List Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<body>

    @{int flag = 0; }
    <br />
    <main id="main">
        <section id="testimonials" class="testimonials section-bg">
            <div class="container">

                <div class="section-title">
                    <h2>List Feedback</h2>
                    <p></p>
                </div>

                <div class="testimonials-slider swiper-container" data-aos="fade-up" data-aos-delay="100">
                    <div class="swiper-wrapper">

                        <div class="swiper-slide">
                            <div class="testimonial-item" data-aos="fade-up">

                                <p>
                                    @foreach (var item in Model.PagedList)
                                    {
                                        @if (item.UserID == @ViewBag.TeacherID)
                                        {

                                            <b> @Html.DisplayFor(modelItem => item.FeedbackDate)</b>
                                            <br />
                                            flag++;
                                        }



                                        @if (item.UserID == @ViewBag.TeacherID)
                                        {

                                            <b> @Html.DisplayFor(modelItem => item.FeedbackContent)</b>
                                            <br />
                                            <b>-----------------------------------------------</b>
                                            <br />
                                        }

                                    }
                                    @if (flag == 0)
                                    {

                                        <h4>You have no feedbacks.</h4>

                                    }
                                </p>


                                @if (ViewBag.Usertype == "\"Student\"")
                                {
                                    <img src="~/images/student.png" class="testimonial-img" alt="">
                                }
                                else if (ViewBag.Usertype == "\"Parent\"")
                                {
                                    <img src="~/images/family.png" class="testimonial-img" alt="">
                                }
                                else if (ViewBag.Usertype == "\"Teacher\"")
                                {
                                    <img src="~/images/teacher.png" class="testimonial-img" alt="">
                                }
                                <h3>@ViewBag.NameSurname</h3>

                            </div>
                        </div><!-- End testimonial item -->
                    </div>
                </div>

            </div>
        </section>

    </main>



</body>
