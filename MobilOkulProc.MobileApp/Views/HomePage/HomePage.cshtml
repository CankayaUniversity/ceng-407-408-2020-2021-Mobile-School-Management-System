
@{


    Layout = "~/Views/Shared/_Layout.cshtml";

}



<body>
    <section id="student" class="d-flex flex-column justify-content-center align-items-center">
        <div class="student-container" data-aos="fade-in">
            @if (ViewBag.Usertype == "\"Student\"")
            {
                <h1>@ViewBag.NameSurname</h1>
                <p>User : <span class="typed" data-typed-items="Student"></span></p>
            }
            else @if (ViewBag.Usertype == "\"Parent\"")
       {
        <h1>@ViewBag.NameSurname</h1>
        <p>User : <span class="typed" data-typed-items="Parent"></span></p>
    }
    else if (ViewBag.Usertype == "\"Teacher\"")
    {
        <h1>@ViewBag.NameSurname</h1>
        <p>User : <span class="typed" data-typed-items="Teacher"></span></p>
    }
        </div>
    </section><!-- End Hero -->

    <main id="main">

        <!-- ======= About Section ======= -->
        <section id="about" class="about">
            <div class="container">

                <div class="section-title">
                    <h2>Info</h2>
                    <p></p>
                </div>

                <div class="row">
                    <div class="col-lg-4" data-aos="fade-right">
                        @if (ViewBag.Usertype == "\"Student\"")
                        {
                            <img src="~/images/student.png" class="img-fluid" alt="">
                        }
                        else if (ViewBag.Usertype == "\"Teacher\"")
                        {
                            <img src="~/images/teacher.png" class="img-fluid" alt="">
                        }
                        else if (ViewBag.Usertype == "\"Parent\"")
                        {
                            <img src="~/images/family.png" class="img-fluid" alt="">
                        }
                    </div>
                    @if (ViewBag.Usertype == "\"Student\"")
                    {
                        <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                            <h3>Student Information</h3>
                            <p class="fst-italic">

                            </p>
                            <div class="row">
                                <div class="col-lg-6">
                                    <ul>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Student Number:</strong> <span>@ViewBag.StudentNumber</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Student's Parent:</strong> <span>@ViewBag.StudentParent</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@ViewBag.Phone</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Register Date:</strong> <span>@ViewBag.StudentRegisterDate</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Blood Type:</strong> <span>@ViewBag.StudentBloodType</span></li>
                                    </ul>
                                </div>
                                <div class="col-lg-6">
                                    <ul>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Graduate Date:</strong> <span>@ViewBag.StudentGraduateDate</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Student Adress1:</strong> <span>@ViewBag.StudentAdress1</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Student Adress2:</strong> <span>@ViewBag.StudentAdress2</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Birth Date:</strong> <span>@ViewBag.StudentBirthDate</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Birth Place:</strong> <span>@ViewBag.StudentBirthPlace</span></li>
                                    </ul>
                                </div>
                            </div>
                            <p>

                            </p>
                        </div>
                    }
                    else if (ViewBag.Usertype == "\"Teacher\"")
                    {
                        <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                            <h3>Teacher Information</h3>
                            <p class="fst-italic">

                            </p>
                            <div class="row">
                                <div class="col-lg-6">
                                    <ul>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Teacher TCNo:</strong> <span>@ViewBag.TeacherTcNo</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Teacher BranchID:</strong> <span>@ViewBag.TeacherBranchID</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Teacher Phone:</strong> <span>@ViewBag.Phone</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Teacher Address:</strong> <span>@ViewBag.TeacherAdress</span></li>
                                    </ul>
                                </div>
                                <div class="col-lg-6">
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                            <p>

                            </p>
                        </div>
                    }
                    else if (ViewBag.Usertype == "\"Parent\"")
                    {
                        <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                            <h3>Parent Information</h3>
                            <p class="fst-italic">

                            </p>
                            <div class="row">
                                <div class="col-lg-6">
                                    <ul>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Parent Phone:</strong> <span>@ViewBag.ParentPhone</span></li>
                                        <li><i class="bi bi-chevron-right"></i> <strong>Parent Address:</strong> <span>@ViewBag.ParentAdress</span></li>

                                    </ul>
                                </div>
                                <div class="col-lg-6">
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                            <p>

                            </p>
                        </div>
                    }
                </div>

            </div>
        </section><!-- End About Section -->


    </main>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/typed.js/typed.min.js"></script>
    <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>


    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
</body>
