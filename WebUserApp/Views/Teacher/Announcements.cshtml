@using MobilOkulProc.WebUserApp.ViewModels
@using MobilOkulProc.Entities.Concrete
@model NewsViewModel<NEWS>
@{
    ViewBag.Title = "Duyuru Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm())
{
   

    <div class="form-horizontal">
        <hr />
         @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Mesajlar.Nesne.NewsDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Mesajlar.Nesne.NewsDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.NewsDate, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Mesajlar.Nesne.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Mesajlar.Nesne.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Mesajlar.Nesne.NewsContent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Mesajlar.Nesne.NewsContent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.NewsContent, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Mesajlar.Nesne.ImageUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Mesajlar.Nesne.ImageUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.ImageUrl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <strong class="col-md-2">Eğitim Kurumu</strong>
            <div class="col-md-2">
                @Html.DropDownListFor(m => m.EducationalInstitutionId, Model.EducationalInstitutionList, "Lütfen Eğitim Kurumu Seçiniz", new { @class = "form-control dropdown" })
            </div>
        </div>

        <div class="form-group">
            <strong class="col-md-2">Okul</strong>
            <div class="col-md-2">
                @Html.DropDownListFor(m => m.SchoolId, Model.SchoolList, "Lütfen Okul Seçiniz", new { @class = "form-control dropdown" })
            </div>
        </div>
        <div class="form-group">
            <strong class="col-md-2">Kullanıcı</strong>
            <div class="col-md-2">
                @Html.DropDownListFor(m => m.UserId, Model.UserList, "Lütfen Kullanıcı Seçiniz", new { @class = "form-control dropdown" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Mesajlar.Nesne.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Mesajlar.Nesne.Status, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.Status, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<br />
<p>
    <div class="input-group">

        @if (ViewBag.Result != null)
        {
            <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>
        }

    </div>
    <br />

</p>
<br />

