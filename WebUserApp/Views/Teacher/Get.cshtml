@using MobilOkulProc.Entities.Concrete 
@model TEACHER
@{
    ViewBag.Title = "Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/dist/img/user1-128x128.jpg"
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">@Model.FullName</h3>

                        <p class="text-muted text-center">@Model.Branch.BranchName</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>TCNo</b> <a class="float-right">@Model.TcNo[1..5]*****@Model.TcNo[9..11]</a>
                            </li>
                            <li class="list-group-item">
                                <b>Adres</b> <a class="float-right">@Model.Adress</a>
                            </li>
                            <li class="list-group-item">
                                <b>Telefon</b> <a class="float-right">@Model.Phone</a>
                            </li>
                            <li class="list-group-item">
                                <b>Email</b> <a class="float-right">@Model.Email</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- About Me Box -->
            <div class="col-md-7">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hakkımda</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-crown"></i> Yetki</strong>

                        <p class="text-muted">
                            @Model.User.Role
                        </p>

                        <hr>

                        <strong><i class="far fa-newspaper"></i> Akademik Yayınlar </strong>

                        <p class="text-muted"></p>
                        <hr />

                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            
            <!-- /.card -->


        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->