@using MobilOkulProc.WebUserApp.ViewModels
@model ProfileViewModel
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/dist/img/user1-128x128.jpg"
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">@Model.Student.FullName</h3>

                        <p class="text-muted text-center">10 - Fen - A</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>TCNo</b> <a class="float-right">@Model.Student.TcNo[1..5]*****@Model.Student.TcNo[9..11]</a>
                            </li>
                            <li class="list-group-item">
                                <b>Öğrenci No</b> <a class="float-right">@Model.Student.StdNumber</a>
                            </li>
                            <li class="list-group-item">
                                <b>Kayıt Tarihi</b> <a class="float-right">@Model.Student.RegisterDate.ToString("dd.MM.yyyy - dddd")</a>
                            </li>
                            <li class="list-group-item">
                                <b>Mezuniyet Tarihi</b> <a class="float-right">@Model.Student.GraduateDate.ToString("dd.MM.yyyy - dddd")</a>
                            </li>
                            <li class="list-group-item">
                                <b>Doğum Yeri</b> <a class="float-right">@Model.Student.BirthPlace</a>
                            </li>
                            <li class="list-group-item">
                                <b>Kan Grubu</b> <a class="float-right">@Model.Student.BloodType</a>
                            </li>
                            <li class="list-group-item">
                                <b>Doğum Tarihi</b> <a class="float-right">@Model.Student.BirthDate.ToString("dd.MM.yyyy - dddd")</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hakkımda</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> Okul</strong>

                        <p class="text-muted">
                            Sınav Okulları Ankara
                        </p>

                        <hr>

                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Adres</strong>

                        <p class="text-muted">@Model.Student.Adress1</p>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Öğrenci</a></li>
                            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Veli</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="activity">
                                <!-- Post -->
                                <h3>Geri Bildirimlerim</h3>
                                <hr />
                                <div class="post">
                                    <div class="user-block">
                                        <img class="img-circle img-bordered-sm" src="~/dist/img/user1-128x128.jpg" alt="user image">
                                        <span class="username">
                                            <a href="#">Murat Şanlısavaş</a>
                                            <a href="#" class="float-right btn-tool"></a>
                                        </span>
                                        <span class="description">14.02 - 11.06.2021</span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        Uzaktan eğitimlerde öğretmenler daha çok soru çözse çok iyi olur.
                                    </p>

                                </div>
                                <!-- /.post -->
                                <!-- Post -->
                                <div class="post">
                                    <div class="user-block">
                                        <img class="img-circle img-bordered-sm" src="../../dist/img/user1-128x128.jpg" alt="user image">
                                        <span class="username">
                                            <a href="#">Murat Şanlısavaş</a>
                                            <a href="#" class="float-right btn-tool"></a>
                                        </span>
                                        <span class="description">14.02 - 11.06.2021</span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        Okulun websitesi çok yavaş çalışıyor.
                                    </p>

                                </div>
                                <!-- /.post -->
                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="timeline">
                                <!-- The Veli -->
                                @foreach (var item in Model.StudentParentList)
                                {
                                    <!-- Profile Image -->
                                <div class="card card-primary card-outline">
                                    <div class="card-body box-profile">
                                        <div class="text-center">
                                            <img class="profile-user-img img-fluid img-circle"
                                                 src="~/dist/img/user6-128x128.jpg"
                                                 alt="User profile picture">
                                        </div>

                                        <h3 class="profile-username text-center">@item.Parent.FullName</h3>

                                        <ul class="list-group list-group-unbordered mb-3">
                                            <li class="list-group-item">
                                                <b>Adres</b> <a class="float-right">@item.Parent.Adress</a>
                                            </li>
                                            <li class="list-group-item">
                                                <b>Telefon</b> <a class="float-right">@item.Parent.Phone</a>
                                            </li>
                                            <li class="list-group-item">
                                                <b>E-Posta</b> <a class="float-right">@item.Parent.Email</a>
                                            </li>

                                        </ul>
                                    </div><!-- /.card-body -->

                                </div><!-- /.card -->
                                }





                            </div>
                            <!-- /.tab-pane -->

                            
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->