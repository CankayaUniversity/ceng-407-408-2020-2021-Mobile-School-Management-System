@using MobilOkulProc.Entities.Concrete
@using MobilOkulProc.Entities.General
@model Mesajlar<MESSAGE>
@{
    ViewBag.Title = "Posta Yaz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Compose", "Message", FormMethod.Post))
{
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <a href="~/Message/Mailbox" class="btn btn-primary btn-block mb-3">Mail Kutusuna Dön</a>

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Klasörler</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item active">
                                    <a href="#" class="nav-link">
                                        <i class="fas fa-inbox"></i> Gelen Kutusu
                                        <span class="badge bg-primary float-right">@ViewBag.MessageCount</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-envelope"></i> Giden Kutusu
                                        <span class="badge bg-primary float-right"></span>
                                    </a>

                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="fas fa-filter"></i> Gereksiz
                                        <span class="badge bg-warning float-right"></span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-trash-alt"></i> Çöp kutusu
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">

                                @Html.TextBoxFor(m => m.Nesne.Receive.Username, new { @placeholder = "Kime: ", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Nesne.Receive.Username, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Nesne.MessageTitle, new { @placeholder = "Konu: ", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Nesne.MessageTitle, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.Nesne.MessageContent, new { @class = "form-control", @style = "height:300px" })
                                @Html.ValidationMessageFor(model => model.Nesne.MessageContent, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <p>
                            <div class="input-group">
                                @if (ViewBag.Result != null)
                                {

                                    <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Result</div>

                                }



                            </div>
                            <br />

                        </p>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            </div>

                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
}

