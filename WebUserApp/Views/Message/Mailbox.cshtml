@using MobilOkulProc.Entities.Concrete
@model List<MESSAGE>
@{
    ViewBag.Title = "Posta Kutusu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<!-- Content Wrapper. Contains page content -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <a href="/Message/Compose" class="btn btn-primary btn-block mb-3">Mail</a>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Klasörler</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item active">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-inbox"></i> Gelen Kutusu
                                    <span class="badge bg-primary float-right">@Model.Count</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="far fa-envelope"></i> Giden Kutusu
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-filter"></i> Gereksiz
                                    <span class="badge bg-warning float-right"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="far fa-trash-alt"></i> Çöp kutusu
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
               
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Gelen Kutusu</h3>
                       
                        <div class="card-tools">
                            <div class="input-group input-group-sm">

                                <div class="input-group-append">

                                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-sync-alt"></i></button>

                                </div>
                            </div>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped">

                                <thead>
                                    <tr>
                                        <th>Gönderen</th>
                                        <th>Başlık</th>
                                        <th>Mesaj</th>
                                        <th>Gönderme Tarihi</th>
                                        <th>Sil/Cevapla

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        

                                        <td class="mailbox-name">@item.Sender.FullName</td>
                                        <td class="mailbox-name"><b>@item.MessageTitle</b></td>
                                        <td class="mailbox-subject">
                                            <a href="~/Message/Read/@item.ObjectID"> @item.MessageContent</a>
                                        </td>
                                        <td class="mailbox-date">@item.SendTime.ToString("f")</td>
                                       
                                        <td>
                                            <div class="">

                                                <a href="~/Message/Delete/@item.ObjectID" button type="button" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></a>
                                                <a href="~/Message/Compose/@item.ObjectID" button type="button" class="btn btn-default btn-sm"><i class="fas fa-reply"></i></a>
                                            </div>
                                        </td>


                                    </tr>

                                    }



                                </tbody>
                            </table>
                            <!-- /.table -->
                        </div>
                        <!-- /.mail-box-messages -->
                    </div>
                    <!-- /.card-body -->
                    
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
<!-- /.content-wrapper -->

