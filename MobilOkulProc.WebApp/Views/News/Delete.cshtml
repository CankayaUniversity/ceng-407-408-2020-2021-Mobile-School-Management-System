@using MobilOkulProc.WebApp.ViewModels
@using MobilOkulProc.Entities.Concrete
@model NewsViewModel<NEWS>
@{
    ViewBag.Title = "Delete News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Delete", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();

    <div>
        <hr />
        <dl class="form-horizontal">
            @Html.HiddenFor(model => model.Mesajlar.Nesne.ObjectID)
            <dt>
                @Html.DisplayNameFor(m => m.Mesajlar.Nesne.NewsDate)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Mesajlar.Nesne.NewsDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Mesajlar.Nesne.Title)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Mesajlar.Nesne.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Mesajlar.Nesne.NewsContent)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Mesajlar.Nesne.NewsContent)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Mesajlar.Nesne.ImageUrl)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Mesajlar.Nesne.ImageUrl)
            </dd>

            <dt>
                @Html.DisplayNameFor(m => m.Mesajlar.Nesne.Educational_Institution.EducationalName)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Mesajlar.Nesne.Educational_Institution.EducationalName)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Mesajlar.Nesne.School.SchoolName)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Mesajlar.Nesne.School.SchoolName)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Mesajlar.Nesne.User.NameSurname)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Mesajlar.Nesne.User.NameSurname)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Mesajlar.Nesne.Status)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Mesajlar.Nesne.Status)
            </dd>


        </dl>
        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Geri Dön", "List")
        </div>
        <br />
        <h3>
            Silmek istediğinden emin misin?
        </h3>
    </div>
    <p>
        <div class="input-group">
            @if (Model.Mesajlar != null)
            {
                if (Model.Mesajlar.Mesaj != null)
                {
                    <div class="alert alert-@Model.Mesajlar.Status" role="alert">@Model.Mesajlar.Mesaj</div>
                }


            }
        </div>
        <br />

    </p>
    <br />
}

