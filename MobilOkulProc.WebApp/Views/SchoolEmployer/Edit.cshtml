@using MobilOkulProc.WebApp.ViewModels
@using MobilOkulProc.Entities.Concrete
@model SchoolEmployerViewModel<SCHOOL_EMPLOYER>
@{
    ViewData["Title"] = "Edit School Employer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(m => m.Mesajlar.Nesne.ObjectID)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Mesajlar.Nesne.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.Mesajlar.Nesne.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Mesajlar.Nesne.NameSurname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.Mesajlar.Nesne.NameSurname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.NameSurname, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Mesajlar.Nesne.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.Mesajlar.Nesne.Phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.Phone, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Mesajlar.Nesne.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.Mesajlar.Nesne.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <strong class="col-md-2">Eğitim Kurumu</strong>
        <div class="col-md-2">
            @Html.DropDownListFor(m => m.EdInstitutionId, Model.EdInstitutionList, "Lütfen Eğitim Kurumu Seçiniz", new { @class = "form-control dropdown" })
        </div>
    </div>
    <div class="form-group">
        <strong class="col-md-2">Çalışan Türü</strong>
        <div class="col-md-2">
            @Html.DropDownListFor(m => m.EmployeeTypeId, Model.EmployeeTypeList, "Lütfen Çalışan Türü Seçiniz", new { @class = "form-control dropdown" })
        </div>
    </div>
    <div class="form-group">
        <strong class="col-md-2">Okul</strong>
        <div class="col-md-2">
            @Html.DropDownListFor(m => m.SchoolId, Model.SchoolList, "Lütfen Okul Seçiniz", new { @class = "form-control dropdown" })
        </div>
    </div>
    <div class="form-group">
        <strong class="col-md-2">Kullanıcı</strong>
        <div class="col-md-2">
            @Html.DropDownListFor(m => m.UserId, Model.UserList, "Lütfen Kullanıcı Seçiniz", new { @class = "form-control dropdown" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Mesajlar.Nesne.Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.Mesajlar.Nesne.Status, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Mesajlar.Nesne.Status, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" value="Kaydet" class="btn btn-success" /> | @Html.ActionLink("Listeye Geri Dön", "List")


        </div>

    </div>
</div>
}

<p>
    <div class="input-group">
        @if (Model.Mesajlar != null)
        {
            if (Model.Mesajlar.Mesaj != null)
            {
                <div class="alert alert-@Model.Mesajlar.Status" role="alert">@Model.Mesajlar.Mesaj</div>
            }


        }
    </div>
    <br />

</p>



