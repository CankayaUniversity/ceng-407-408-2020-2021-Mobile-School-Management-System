@using MobilOkulProc.WebApp.ViewModels
@using MobilOkulProc.Entities.Concrete
@model SectionViewModel<SECTION>

@{
    ViewData["Title"] = "Section Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.SectionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.SectionName)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.School.SchoolName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.School.SchoolName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.Status)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.Mesajlar.Nesne.ObjectID }) |
    @Html.ActionLink("Listeye Geri Dön", "List")
</div>
<p>
    <div class="input-group">
        @if (Model.Mesajlar != null)
        {
            if (Model.Mesajlar.Mesaj != null)
            {
                <div class="alert alert-@Model.Mesajlar.Status" role="alert">@Model.Mesajlar.Mesaj</div>
            }


        }
    </div>
    <br />

</p>