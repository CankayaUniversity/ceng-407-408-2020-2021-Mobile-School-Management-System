@using MobilOkulProc.Entities.General
@using MobilOkulProc.Entities.Concrete
@model Mesajlar<BRANCH>
@{
    ViewBag.Title = "Delete Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("DeleteBranch", "Branch", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();

    <div>
        <hr />
        <dl class="form-horizontal">
            @Html.HiddenFor(model => model.Nesne.ObjectID)
            <dt>
                @Html.DisplayNameFor(m => m.Nesne.BranchName)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Nesne.BranchName)
            </dd>

        </dl>
        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Geri Dön", "ListBranch")
        </div>
        <br />
        <h3>
            Branch'ı silmek istediğinden emin misin?
        </h3>
    </div>
    <p>
        <div class="input-group">
            @if (Model != null)
            {
                if (Model.Mesaj != null)
                {
                    <div class="alert alert-@Model.Status" role="alert">@Model.Mesaj</div>
                }


            }
        </div>
        <br />

    </p>
    <br />
}

