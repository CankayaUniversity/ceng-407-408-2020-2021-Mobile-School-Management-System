@using MobilOkulProc.WebApp.ViewModels
@using MobilOkulProc.Entities.Concrete
@model AbsenceViewModel<ABSENCE>

@{
    ViewData["Title"] = "Absence Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.AbsenceDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.AbsenceDetails)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.AbsenceCommentary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.AbsenceCommentary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.AbsenceDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.AbsenceDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.TotalAbsence)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.TotalAbsence)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.Student.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.Student.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesajlar.Nesne.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesajlar.Nesne.Status)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.Mesajlar.Nesne.ObjectID }) |
    @Html.ActionLink("Listeye Geri Dön", "List")
</div>
<p>
    <div class="input-group">
        @if (Model.Mesajlar != null)
        {
            if (Model.Mesajlar.Mesaj != null)
            {
                <div class="alert alert-@Model.Mesajlar.Status" role="alert">@Model.Mesajlar.Mesaj</div>
            }


        }
    </div>
    <br />

</p>